<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_color_image_view"
        android:layout_width="@dimen/product_color_view_size"
        android:layout_height="@dimen/product_color_view_size"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/view_color_check_image_view"
        android:layout_width="@dimen/product_color_check_view_size"
        android:layout_height="@dimen/product_color_check_view_size"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_selection_indicator"
        android:visibility="invisible" />
</FrameLayout>